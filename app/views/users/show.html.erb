<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
		</section>
		<section>
			<%= render 'shared/stats' %>
		</section>
	</aside>
	<div class="span8">
		<% if @user.courses.any? %>
			<h3>Courses (<%= @user.courses.count%>)</h3>
			<ol class = "courses">
				<%= render @courses %>
			</ol>
			<%= will_paginate @courses %>
		<% end %>
	</div>
</div>