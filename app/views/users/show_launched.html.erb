<% provide(:title, @title) %>
<div class="row">
	<aside class="span4">
		<section>
			<%= gravatar_for @user %>
			<h1><%=@user.name %></h1>
			<span><p><%= link_to "view profile", @user %></p></span>
		</section>
		<section>
			<%= render 'shared/stats' %>
		</section>
	</aside>
	<div class="span8">
		<h3><%= @title %> (<%= @user.courses.count%>)</h3>
		<% if @courses.any? %>
			<ol class="courses">
				<%= render @courses %>
			</ol>
			<%= will_paginate @courses %>
		<% end %>
	</div>
</div>