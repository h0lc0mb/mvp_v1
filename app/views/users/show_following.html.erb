<% provide(:title, @title) %>
<div class="row">
	<aside class="span4">
		<section>
			<%= gravatar_for @user %>
			<h1><%=@user.name %></h1>
			<span><%= link_to "view profile", @user %></span>
			<span><b>Courses:</b> Number of courses here</span>
		</section>
		<section>
			<%= render 'shared/stats' %>
		</section>
	</aside>
	<div class="span8">
		<h3><%= @title %></h3>
		<% if @courses.any? %>
			<ul class="courses">
				<%= render @courses %>
			</ul>
			<%-# need to add course pagination here <%= will_paginate -%>
		<% end %>
	</div>
</div>