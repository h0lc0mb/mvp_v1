<li>
	<% if post.follower_user == @course.user %>
		<span class="launcher_content"><%= post.content %></span>
	<% else %>
		<span class="content"><%= post.content %></span>
	<% end %>
	<span class="timestamp">
		Posted by
		<%= link_to post.follower_user.name, post.follower_user %>
		<%= time_ago_in_words(post.created_at) %> 
		ago.
	</span>
	<% if current_user?(post.follower_user) %>
		<%= link_to "delete", post, method: :delete,
																data: { confirm: "You sure?" },
																title: post.content %>
	<% end %>
</li>