<li id="<%= feed_item.id %>">
	<% if feed_item.follower_user == feed_item.followed_course.user %>
		<span class="launcher_content"><%= feed_item.content %></span>
	<% else %>
		<span class="content"><%= feed_item.content %></span>
	<% end %>
	<span class="course">
		<font size = 2>
			Posted in
			<b><%= link_to feed_item.followed_course.coursename, feed_item.followed_course %></b>
		</font>
	</span>
	<span class="launched_info">
		<font size = 2>
			by <%= link_to feed_item.follower_user.name, feed_item.follower_user %> 
			<%= time_ago_in_words(feed_item.created_at) %> ago.
		</font>
	</span>
	<% if current_user?(feed_item.follower_user) %>
		<font size = 2>
			<%= link_to "delete", feed_item, method: :delete,
																			 data: { confirm: "You sure?" },
																			 title: feed_item.content %>
		</font>
	<% end %>
</li>