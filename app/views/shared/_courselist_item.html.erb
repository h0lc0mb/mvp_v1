<li id="<%= courselist_item.id %>">
	<b>
		<font size = 3>
			<span class="coursename"><%= link_to courselist_item.coursename %></span>
		</font>
	</b>
	<span class="launched_info">
		Launched by 
		<%= link_to courselist_item.user.name, courselist_item.user %>
		<%= time_ago_in_words(courselist_item.created_at) %> 
		ago.
	</span>
	<% if current_user?(courselist_item.user) %>
		<%= link_to "delete", courselist_item, method: :delete,
																					 data: { confirm: "You sure? This is the point of no return!" },
																					 title: courselist_item.coursename %>
	<% end %>
	<br>
	<%= link_to "View course", course_path(courselist_item) %> |
	<%= link_to "Join course" %>
</li>