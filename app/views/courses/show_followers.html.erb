<% provide(:title, @title) %>
<div class="row">
	<aside class="span4">
		<section>
			<h1><%=@course.coursename %></h1>
			<br>
			<span class="launched_info">
				Launched by 
				<%= link_to @course.user.name, @course.user %>
				<%= time_ago_in_words(@course.created_at) %> 
				ago.
			</span>
			<span><%= link_to "view course page", @course %></span>
		</section>
		<section>
			<%= render 'shared/other_stats' %>
		</section>
	</aside>
	<div class="span8">
		<h3><%= @title %></h3>
			<% if @users.any? %>
				<ul class="users">
					<%= render @users %>
				</ul>
				<%-# need to add course pagination here <%= will_paginate -%>
			<% end %>
		</section>
	</aside>
</div>